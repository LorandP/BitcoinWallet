<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:id="@+id/time_tv"
        android:textColor="@color/dark_pink"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First transaction"
        android:layout_marginTop="30dp"
        android:id="@+id/hashString_tv"
        android:textColor="@color/violet"
        android:textSize="12sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/note_tv"
        android:textColor="@color/medium_violet"
        android:textSize="12sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0.005 BTC"
        android:layout_alignParentRight="true"
        android:id="@+id/BTCvalue_tv"
        android:textColor="@android:color/holo_green_light"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0.005 BTC"
        android:layout_alignParentRight="true"
        android:id="@+id/BTCvalue_tv_rosu"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="40dp"
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginTop="50dp"
        android:id="@+id/stars_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="...."
        android:textColor="@android:color/holo_green_light"
        android:layout_marginTop="50dp"
        android:id="@+id/stars_tv_green"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@drawable/vertical_line"
        android:layout_marginTop="70dp"
        android:id="@+id/verticalLine_tv"
        />
</RelativeLayout>